<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp">
                    <View
                        android:id="@+id/line"
                        android:layout_width="347dp"
                        android:layout_height="2dp"
                        android:layout_centerHorizontal="true"
                        android:background="@color/sub_color"
                        />
                    <ImageView
                        android:id="@+id/department_image_1"
                        android:layout_width="160dp"
                        android:layout_height="164dp"
                        android:layout_below="@+id/line"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="34dp"
                        android:background="@drawable/drawable_resource_file"/>

                    <TextView
                        android:id="@+id/department_input_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line"
                        android:layout_marginLeft="220dp"
                        android:layout_marginTop="15dp"
                        android:text="컴퓨터공학과"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/outline_1"
                        android:layout_width="150dp"
                        android:layout_height="92dp"
                        android:layout_below="@+id/department_input_1"
                        android:layout_marginLeft="220dp"
                        android:layout_marginTop="5dp"
                        android:text="간단소개" />


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:id="@+id/line_2"
                        android:layout_width="347dp"
                        android:layout_height="2dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:background="@color/sub_color"
                        />
                    <ImageView
                        android:id="@+id/department_image_2"
                        android:layout_width="160dp"
                        android:layout_height="164dp"
