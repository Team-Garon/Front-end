<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:gravity="top"
        android:background="@color/main_color"
        >
        <ImageButton
            android:id="@+id/menu_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/tab_button"
            android:background="@color/main_color"


            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/department_View"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        >

        <View
            android:id="@+id/line"
            android:layout_width="347dp"
            android:layout_height="2dp"
            android:layout_centerHorizontal="true"
            android:background="@color/sub_color"
            />


        <ImageView
            android:id="@+id/department_image"
            android:layout_width="160dp"
            android:layout_height="164dp"
            android:layout_below="@+id/line"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="34dp"
            android:background="@drawable/drawable_resource_file"/>

        <TextView
            android:id="@+id/department_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="15dp"
            android:text="컴퓨터공학과"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/outline"
            android:layout_width="150dp"
            android:layout_height="92dp"
            android:layout_below="@+id/department_input"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="5dp"
            android:text="간단소개" />

        <View
            android:id="@+id/line_bottom"
            android:layout_width="347dp"
            android:layout_height="2dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/department_image"
            android:layout_marginTop="15dp"
            android:background="@color/sub_color"
            />
    </RelativeLayout>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>