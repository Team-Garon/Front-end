<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="148dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="1dp"
        android:background="@color/main_color"
        >
        <ImageButton
            android:id="@+id/tab_button"
            android:layout_width="37dp"
            android:layout_height="32.56dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="91dp"
            android:background="@drawable/tab_button"

            />
    </LinearLayout>

    <View
        android:id="@+id/vector_9"
        android:layout_width="347dp"
        android:layout_height="4dp"
        android:background="@color/sub_color"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="171dp" />

    <RelativeLayout
        android:id="@+id/department_View"
        android:layout_width="409dp"
        android:layout_height="197dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="189dp">

        <ImageView
            android:id="@+id/department_image"
            android:layout_width="160dp"
            android:layout_height="164dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="15dp"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="190dp"
            tools:srcCompat=""
            android:background="@drawable/drawable_resource_file"/>

        <TextView
            android:id="@+id/department"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="30dp"
            android:text="컴퓨터 공학과"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/outline"
            android:layout_width="172dp"
            android:layout_height="92dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="80dp"
            android:text="간단소개" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>